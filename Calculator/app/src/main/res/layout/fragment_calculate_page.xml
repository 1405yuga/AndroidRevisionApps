<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fragment_margin"
    tools:context=".CalculatePage">

    <LinearLayout
        android:id="@+id/calculation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/operations_grid_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="3+4"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/not_focus_text_size"/>

        <TextView
            android:id="@+id/output_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="7"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/focus_text_size"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/operations_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/buttons_margin"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:paddingHorizontal="@dimen/button_horizontal_padding"
            android:paddingVertical="@dimen/button_vertical_padding"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/buttons_margin"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:paddingHorizontal="@dimen/button_horizontal_padding"
            android:paddingVertical="@dimen/button_vertical_padding"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/buttons_margin"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:paddingHorizontal="@dimen/button_horizontal_padding"
            android:paddingVertical="@dimen/button_vertical_padding"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/buttons_margin"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:paddingHorizontal="@dimen/button_horizontal_padding"
            android:paddingVertical="@dimen/button_vertical_padding"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/buttons_margin"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:paddingHorizontal="@dimen/button_horizontal_padding"
            android:paddingVertical="@dimen/button_vertical_padding"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>