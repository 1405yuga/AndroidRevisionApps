<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fragment_margin"
    tools:context=".CalculatePage">

    <LinearLayout
        android:id="@+id/calculation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/operations_grid_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:gravity="end"
            android:text="3+4"
            android:textColor="@color/unfocused_text"
            android:textSize="@dimen/not_focus_text_size" />

        <TextView
            android:id="@+id/output_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:gravity="end"
            android:text="7"
            android:textColor="@color/focused_text"
            android:textSize="@dimen/focus_text_size" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/operations_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:rowOrderPreserved="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="AC"
            android:textColor="@color/special_operations_text"
            android:textSize="@dimen/numbers_text_size"
            android:backgroundTint="@color/special_operations_bg"/>

        <TextView
            android:id="@+id/xSquare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="9"
            android:textColor="@color/special_operations_text"
            android:textSize="@dimen/numbers_text_size"
            android:backgroundTint="@color/special_operations_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size"
            android:backgroundTint="@color/operations_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="ร"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size"
            android:backgroundTint="@color/operations_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size"
            android:backgroundTint="@color/operations_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size"
            android:backgroundTint="@color/operations_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/screen_button"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:minWidth="@dimen/min_clickable_size"
            android:minHeight="@dimen/min_clickable_size"
            android:text="="
            android:textColor="@color/white"
            android:textSize="@dimen/numbers_text_size"
            android:backgroundTint="@color/operations_bg"/>


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>